---
import imagen1 from '../assets/Registrate/cohete.svg';
import imagen2 from '../assets/Registrate/aprende.svg';
---
<div class="container">
    <div class="container__imagen">
        <img src={imagen1.src} alt="Cohete">
        <img src={imagen2.src} alt="No pares de aprender">
    </div>
    
    <section>
        <h2>Regístrate</h2>
        <form action="/">
            <input type="text" name="nombre" id="nombre" placeholder="Ingresa tus Nombres">
            <input type="text" name="apellido" id="apellido" placeholder="Ingresa tus Apellidos">
            <input type="email" name="correo" id="email" placeholder="Correo Electrónico">
            <input type="password" name="contraseña" id="password" placeholder="Contraseña">
            <input type="password" name="confirmar contraseña" id="confirmPassword" placeholder="Confirma tu Contraseña">
            <input type="button" value="Regístrate" id="iniciaSec" > 
        </form>
        <p>¿Ya tienes una cuenta? <span><a href="/InicioSesion">Inicia sesión</a></span></p>   
    </section>
</div>


<style>
    .container {
        font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
        margin: 0px clamp(0px, 18vw, 400px);
        height: 90vh;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 5%;
    }

    .container__imagen{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    h2{
        color: rgb(124, 124, 124);
        text-align: center;
    }

    p{
        text-align: center;
    }
    img{
        width: clamp(20rem, 25vw, 30rem);
    }

    .container__imagen img:nth-child(1){
        width: clamp(20rem, 18vw, 30rem);
    }

    section{
        width: 25%;
    }

    input, form{
        width: 100%;
    }

    input{
        height: 40px;
        border-radius: 10px;
        border: 1px solid rgb(134, 134, 134);
    }

    input::placeholder{
        color: rgb(124, 124, 124);
        font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
        font-weight: 700;
        text-align: center;
    }

    input:focus{
        border: 1px solid #F15151;
        outline: none;
    
    }

    #iniciaSec{
        padding: 0;
        margin: 0;
        border: 0;
        background-color: #F15151;
		color: white;
        font-weight: 700;
        font-size: clamp(0.8rem, 2vw, 1rem);
    }

    section, form{  
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    form{
        gap: 10px   ;
    }

    section p a{
        text-decoration: none;
        color: #F15151;
        font-weight: 700;
    }

    p:nth-child(3){
        border-bottom: 1px solid;
        padding-bottom: 2%;
    }

  

</style>